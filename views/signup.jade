extends ./layout.jade
block contenido
	div(class="col-md-8 remove-float center-block  big-top-space")
		form(action="/users",method="POST")
			div(class="form-group")
				label(for="email") Email
				input(type="text",name="email",placeholder="Email",id="email" class="form-control")
			div
				label(for="Username") Username
				input(type="text",name="username",placeholder="Nombre de Usuario",id="username" class="form-control")
